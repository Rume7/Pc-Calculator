package addressbook;

import java.util.Date;
import java.util.GregorianCalendar;

/**
 * Created by Computation on 6/8/15.
 */
public class Person
{
    private enum Status {SINGLE, MARRIED, DIVORCED};

    private String first_name;
    private String last_name;
    private GregorianCalendar birth_day;
    private String place_of_work;
    private String sex;
    private ContactDetails contact;

    private static int ID = 10000;

    public Person(String first_name, String last_name, String phone_no)
    {
        this(first_name, last_name, phone_no, null);
    }

    public Person(String first_name, String last_name)
    {
        this(first_name, last_name, null, null);
    }

    public Person(String first_name, String last_name, String phone_no, String email)
    {
        this.first_name = first_name;
        this.last_name = last_name;
        this.contact = new ContactDetails(phone_no, email);
        this.birth_day = new GregorianCalendar();

        ID++;
    }

    public static int getID() {
        return ID;
    }

    String getFirst_name() {
        return first_name;
    }

    public void setFirst_name(String first_name) {
        this.first_name = first_name;
    }

    String getLast_name() {
        return last_name;
    }

    public void setLast_name(String last_name) {
        this.last_name = last_name;
    }

    public String getName()
    {
        return getFirst_name() + " " + getLast_name();
    }

    // get the contact of the individual
    public ContactDetails getContact(){
        return contact;
    }

    public int hashCode(){return 0;}

    public String toString()
    {
        return getName() + "\t" + contact.getPhone_numbers() +"\t" + contact.getEmails() + " \t" +
                contact.getFacebookID() + "\t" + contact.getResidential_address();
    }
}
